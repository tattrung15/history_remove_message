{
  "manifest_version": 3,
  "name": "History Remove Message",
  "description": "Xem các tin nhắn đã bị gỡ",
  "version": "1.0",
  "icons": {
    "128": "logo.png",
    "16": "logo.png"
  },
  "action": {
    "default_icon": "logo.png",
    "default_popup": "./popup/popup.html"
  },
  "externally_connectable": {
    "matches": ["*://*.facebook.com/*", "*://*.messenger.com/*"]
  },
  "permissions": ["unlimitedStorage", "storage"],
  "host_permissions": ["*://*.facebook.com/*", "https://*.messenger.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["./inject_worker.js"],
      "matches": [
        "https://www.facebook.com/*",
        "https://www.messenger.com/t/*"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectws.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
